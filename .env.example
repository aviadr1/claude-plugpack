# ===========================================
# Claude Plugin Pack Hub - Environment Config
# ===========================================
# Copy this file to .env for local development
# All these values work out of the box with docker-compose.yml

# ===========================================
# Database (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql+asyncpg://plugpack:plugpack_dev_password@localhost:5432/plugpack

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Meilisearch
# ===========================================
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=plugpack_meili_dev_key

# ===========================================
# Application
# ===========================================
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=dev-secret-key-change-in-production-must-be-32-chars

# ===========================================
# GitHub OAuth (Optional for dev)
# ===========================================
# Create at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===========================================
# GitHub API Token (for scraping)
# ===========================================
# Create at: https://github.com/settings/tokens with public_repo scope
GITHUB_TOKEN=

# ===========================================
# Railway Deployment (Optional for dev)
# ===========================================
# Create at: https://railway.app/account/tokens
RAILWAY_TOKEN=
